<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_startAdvertise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Advertise"/>

            <Button
                android:id="@+id/btn_stopAdvertise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop Advertise"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_startDiscover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Discovered"/>

            <Button
                android:id="@+id/btn_stopDiscover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stop Discovered"/>
        </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list_discovers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</layout>
